<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

    <ImageButton
        android:id="@+id/toastButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/toast3"
        android:background="@drawable/buttonshape2"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:onClick="toast"

        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/nameButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Name"
            android:layout_margin="1dp"
            android:onClick="name"
            android:background="@drawable/buttonshape"
            android:textSize="15dp" />

        <Button
            android:id="@+id/emailButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Email"
            android:onClick="email"
            android:layout_margin="1dp"
            android:background="@drawable/buttonshape"
            android:textSize="15dp" />

        <Button
            android:id="@+id/phoneButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:onClick="phone"
            android:background="@drawable/buttonshape"
            android:text="Phone"
            android:textSize="15dp" />

        <Button
            android:id="@+id/idButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:onClick="id"
            android:background="@drawable/buttonshape"
            android:text="ID"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bloodButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Blood"
            android:onClick="blood"
            android:layout_margin="1dp"
            android:background="@drawable/buttonshape"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/calculaor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/buttonshape2"
        android:text="Calculator"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="calculator"
        android:textColor="#152de4"
        />

    <Button
        android:id="@+id/registration_form"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/buttonshape2"
        android:text="Registration form"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="registration_form"
        android:textColor="#de6c21"
        />

    <Button
        android:id="@+id/login_page"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/buttonshape2"
        android:text="Log in"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="login"
        android:textColor="#c328f7"
        />






</LinearLayout>